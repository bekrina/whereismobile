<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lets_join_a_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/lets_join_a_group"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="30sp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_group_identity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/group_identity_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/group_identity_field"
            android:inputType="textEmailAddress"
            />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:background="@color/white_button"
        android:theme="@style/Widget.AppCompat.Button"/>

</LinearLayout>